+#if OPENSSL_VERSION_NUMBER >= 0x10002000L
+static VALUE
+ossl_ssl_tmp_key(VALUE self)
+{
+       SSL *ssl;
+       EVP_PKEY *key;
+       ossl_ssl_data_get_struct(self, ssl);
+       if (!SSL_get_server_tmp_key(ssl, &key))
